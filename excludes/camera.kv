camera:
    id: camera
    #index: 1
    resolution: (1920, 1080)
    size_hint_y: 2.4
    size_hint_x: 1.8
    pos_hint: {"center_x":0.5,"center_y":0.5}   
    play: False
    canvas.before:
        PushMatrix
        Rotate:
            angle: -90
            origin: self.center
    canvas.after:
        PopMatrix

MDFloatingActionButton:
    icon: "camera"
    icon_color: "#ffffff"
    icon_size: "34sp"
    halign: "center"
    pos_hint: {"center_x": .5, "center_y": .1}
    canvas.before:
        PushMatrix
        Rotate:
            angle: -90
            origin: self.center
    canvas.after:
        PopMatrix
    on_release:
        camera.play = not camera.play 
        #app.capture()
                                                                                           
MDFloatingActionButton:
    icon: "arrow-left"
    icon_size: "24sp"
    pos_hint: {"center_x": .92, "center_y": .90}
    canvas.before:
        PushMatrix
        Rotate:
            angle: -90
            origin: self.center
    canvas.after:
        PopMatrix
    on_release:
        go_to("face", "down")

